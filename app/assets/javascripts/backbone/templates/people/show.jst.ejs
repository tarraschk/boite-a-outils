<div class="row">
    <div class="col-xs-4">
        <img class="media-object img-circle" src="<%= profile_image_url_ssl %>" alt="Photo de <%= full_name %>" width="128" height="128" />
        <br/>
        <h4>Actions</h4>
        <a id="button-email-person-contact" href="<%= email %>" target="_blank"><button type="button" class="btn btn-default btn-md" target="_blank"><span class="glyphicon glyphicon-send" aria-hidden="true"></span> Envoyer un Email</button></a>
        <button type="button" class="btn btn-default btn-md disabled" target="_blank"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editer (bientôt disponible)</button>
        <a id="button-contacted-person"><button type="button" class="btn btn-default btn-md"><span class="glyphicon glyphicon-<%if(contacted){%>check<%}else{%>unchecked<%}%>" aria-hidden="true"></span> Personne contactée</button></a>
    </div>
    <div class="col-xs-8">
        <h4>Informations</h4>
        <p>
            <b>Prénom :</b>
            <%= first_name %>
        </p>

        <p>
            <b>Nom :</b>
            <%= last_name %>
        </p>

        <p>
            <b>Email:</b>
            <%= email %>
        </p>

        <p>
            <b>Téléphone :</b>
            <%= phone %>
        </p>

        <p>
            <b>Mobile :</b>
            <%= mobile %>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">

    </div>
</div>

<script type="text/javascript">
    $(function() {
        $("#button-email-person-contact").attr("href", window.generateEmailLink($("#button-email-person-contact").attr("href")));
    });
</script>