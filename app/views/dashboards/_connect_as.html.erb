<button id="connect_as" type="button" class="btn btn-default btn-md"><span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>Se connecter en tant que</button>


<div class="modal fade" id="connect_as_modal" tabindex="-1" role="dialog" aria-labelledby="connect_as_modal" aria-hidden="true">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn btn-default pull-right" id="connect_as_modal_cancel" data-dismiss="modal">X</button>
                <h2 class="modal-title">Se connecter en tant que</h2>
            </div>
            <div class="modal-body no-padding">
                <div style="border-top:0">
                    <div class="row modal-background">
                        <div class="col-sm-12">
                            <form class="smart-form" id="" action="authenticate_as" style="width: 100%">
                                <select name="user_id" class="form-control">
                                    <%= options_for_select(Person.get_all_coordinators, {:class => 'form-control' }) %>
                                </select>
                                <footer>
                                    <button class="btn btn-primary" id="add_employee_submit">Se connecter<i class="icon"></i></button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#connect_as').click(function (e) {
        $("#connect_as_modal").modal();
        e.preventDefault()
    })
</script>